---
const links = [
	{
		label: 'GitHub',
		href: 'https://github.com/rei-project/REI',
		icon: `<svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
			<path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
		</svg>`,
		primary: true,
		external: true
	},
	{
		label: 'Read the Manifesto',
		href: '/manifesto',
		icon: `<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
			<path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
			<polyline points="14 2 14 8 20 8"/>
			<line x1="16" y1="13" x2="8" y2="13"/>
			<line x1="16" y1="17" x2="8" y2="17"/>
			<polyline points="10 9 9 9 8 9"/>
		</svg>`,
		primary: true,
		external: false
	},
	{
		label: 'Documentation',
		href: 'https://github.com/rei-project/REI#readme',
		icon: `<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
			<path d="M4 19.5A2.5 2.5 0 016.5 17H20"/>
			<path d="M6.5 2H20v20H6.5A2.5 2.5 0 014 19.5v-15A2.5 2.5 0 016.5 2z"/>
		</svg>`,
		primary: false,
		external: true
	},
	{
		label: 'REIVM',
		href: 'https://github.com/rei-project/REIVM',
		icon: `<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
			<rect x="4" y="4" width="16" height="16" rx="2"/>
			<path d="M9 9h6M9 13h6M9 17h4"/>
		</svg>`,
		primary: false,
		external: true
	}
];
---

<section class="cta-section section">
	<div class="container">
		<h2 class="section-title">Explore Further</h2>

		<div class="cta-buttons">
			{links.map((link) => (
				<a
					href={link.href}
					class={`btn ${link.primary ? 'btn-primary' : 'btn-secondary'}`}
					{...(link.external ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
				>
					<span class="btn-icon" set:html={link.icon} />
					<span>{link.label}</span>
				</a>
			))}
		</div>
	</div>
</section>

<style>
	.cta-section {
		padding: 4rem 2rem 6rem;
	}

	.section-title {
		text-align: center;
		margin-bottom: 2.5rem;
	}

	.cta-buttons {
		display: flex;
		justify-content: center;
		gap: 1rem;
		flex-wrap: wrap;
	}

	.btn {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
	}

	.btn-icon {
		display: flex;
		align-items: center;
	}

	.btn-icon :global(svg) {
		display: block;
	}

	@media (max-width: 640px) {
		.cta-buttons {
			flex-direction: column;
			align-items: center;
		}

		.btn {
			width: 100%;
			max-width: 250px;
			justify-content: center;
		}
	}
</style>
