<section class="architecture-section section">
    <div class="container">
        <h2 class="section-title">System Architecture</h2>

        <div class="architecture-wrapper">
            <div class="frosted-card architecture-diagram">
                <!-- Placeholder architecture visualization -->
                <div class="diagram-content">
                    <div class="diagram-layer layer-interfaces">
                        <span class="layer-label">Interfaces</span>
                        <div class="components-row">
                            <div class="component">
                                <span class="component-name">CLI</span>
                            </div>
                            <div class="component">
                                <span class="component-name">Web</span>
                            </div>
                            <div class="component">
                                <span class="component-name">MCP</span>
                            </div>
                            <div class="component">
                                <span class="component-name">VS Code</span>
                            </div>
                        </div>
                    </div>

                    <div class="connector-line"></div>

                    <div class="diagram-layer layer-monitor">
                        <span class="layer-label">Monitor Layer</span>
                        <a href="https://github.com/rei-project/REIMON">
                            <div class="component component-large component-interface">
                                <span class="component-name">REIMON</span>
                                <span class="component-desc">REPL & Interface</span>
                            </div>
                        </a>
                    </div>

                    <div class="connector-line"></div>

                    <div class="diagram-layer layer-vm">
                        <span class="layer-label">Execution Layer</span>
                        <a href="https://github.com/rei-project/REIVM">
                            <div class="component component-large component-core">
                                <span class="component-name">REIVM</span>
                                <span class="component-desc">Core Virtual Machine</span>
                            </div>
                        </a>
                    </div>

                    <div class="connector-line"></div>

                    <div class="diagram-layer layer-stack">
                        <span class="layer-label">Data</span>
                        <div class="stack-visual">
                            <div class="stack-item">value</div>
                            <div class="stack-item">value</div>
                            <div class="stack-item">value</div>
                            <span class="stack-label">Stack</span>
                        </div>
                    </div>
                </div>
            </div>

            <p class="architecture-caption">
                <span class="text-muted">REIVM executes operations on a stack. REIMON provides the interface layer. Multiple frontends connect through REIMON.</span>
            </p>
        </div>
    </div>
</section>

<style>
    .architecture-section {
        background: radial-gradient(ellipse at center, rgba(0, 217, 255, 0.03) 0%, transparent 70%);
    }

    .section-title {
        text-align: center;
        margin-bottom: 3rem;
    }

    .architecture-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
    }

    .architecture-diagram {
        width: 100%;
        max-width: 700px;
        padding: 2.5rem;
    }

    .diagram-content {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-items: center;
    }

    .diagram-layer {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.75rem;
        width: 100%;
    }

    .layer-label {
        font-family: var(--font-mono);
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--color-text-muted);
    }

    .components-row {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .component {
        background: var(--color-bg-surface);
        border: 1px solid var(--color-border);
        border-radius: var(--radius-sm);
        padding: 0.5rem 1rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.25rem;
        min-width: 80px;
    }

    .component-large {
        padding: 0.75rem 2rem;
        min-width: 200px;
    }

    .component-core {
        border-color: var(--color-electric-blue);
        box-shadow: 0 0 15px rgba(0, 217, 255, 0.5);
    }

    .component-interface {
        border-color: var(--color-neon-green);
        box-shadow: 0 0 15px rgb(166, 255, 211, 0.5);
    }

    .component-name {
        font-family: var(--font-mono);
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--color-text-primary);
    }

    .component-core .component-name {
        color: var(--color-electric-blue);
    }

    .component-desc {
        font-size: 0.7rem;
        color: var(--color-text-muted);
    }

    .connector-line {
        width: 2px;
        height: 20px;
        background: linear-gradient(
                180deg,
                var(--color-electric-blue) 0%,
                var(--color-neon-green) 100%
        );
        opacity: 0.5;
    }

    .stack-visual {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
        position: relative;
    }

    .stack-item {
        background: var(--color-bg-secondary);
        border: 1px solid var(--color-neon-green);
        border-radius: var(--radius-sm);
        padding: 0.35rem 1.5rem;
        font-family: var(--font-mono);
        font-size: 0.75rem;
        color: var(--color-neon-green);
        opacity: 0.7;
    }

    .stack-item:first-child {
        opacity: 1;
    }

    .stack-label {
        position: absolute;
        left: calc(100% + 0.75rem);
        top: 50%;
        transform: translateY(-50%);
        font-family: var(--font-mono);
        font-size: 0.7rem;
        color: var(--color-text-muted);
        white-space: nowrap;
    }

    .architecture-caption {
        text-align: center;
        max-width: 500px;
        font-size: 0.9rem;
        line-height: 1.6;
    }

    @media (max-width: 640px) {
        .architecture-diagram {
            padding: 1.5rem;
        }

        .component-large {
            min-width: 150px;
            padding: 0.5rem 1rem;
        }

        .stack-label {
            position: static;
            transform: none;
            margin-top: 0.5rem;
        }

        .stack-visual {
            align-items: center;
        }
    }
</style>
